{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "module": "nodenext",
    "target": "es2022",

    "noEmit": true, // diz ao TypeScript não gerar os arquivos compilados (JS), só verificar tipos.
    "allowImportingTsExtensions": true, //permite que você importe arquivos com a extensão .ts explícita no import.

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}